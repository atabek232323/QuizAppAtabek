<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/histoty"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">

<TextView
    android:id="@+id/CategoryMixed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Category: Mixed"
    android:textColor="@color/black"
    android:textSize="28dp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp" />
        <TextView
            android:id="@+id/Correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct answers:"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CategoryMixed"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8/10"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Correct"
            android:layout_marginTop="52dp"/>
        <TextView
            android:id="@+id/Difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty:"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/Correct"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textSize="22dp"
            android:id="@+id/Easy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Difficulty"
            android:layout_marginTop="91dp"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/eector"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/CategoryMixed"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 may 2019 20:32"
            android:layout_marginEnd="10dp"
            android:textSize="18dp"
            android:layout_marginStart="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Easy"
            android:layout_marginTop="85dp"/>









    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>